@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "湖北准易教育研究院  2020年湖北省技能高考专业课调考成绩查询系统";
}

<div id="view-child" class="easyui-tabs" data-options="border:false,tools:'#tab-tools'">

</div>
<div id="tab-tools">
    <a href="javascript:void(0)" title="刷新当前Tab页" class="easyui-linkbutton red" data-options="plain:true" onclick="refreshTab()"><i class="fa fa-refresh"></i></a>
    <a href="javascript:void(0)" title="关闭除首页外的其他Tab页" class="easyui-linkbutton green" data-options="plain:true" onclick="clearTab()"><i class="fa fa-close"></i></a>
</div>


@Styles.Render("~/Content1/css")
@Styles.Render("~/Content2/css")

@section scripts{
    <script>
        //刷新
        function clearTab() {
            $.messager.confirm({
                title: "提示",
                msg: "是否关闭除首页外的其他Tab页?",
                ok: "确定",
                cancel: "取消",
                fn: function (r) {
                    if (r) {
                        var count = $('#view-child').tabs('tabs').length
                        for (var i = count - 1; i > 0; i--) {
                            $('#view-child').tabs('close', i)
                        }
                    }
                }
            });
        }
        //关闭
        function refreshTab() {
            var tab = $('#view-child').tabs('getSelected');
            var index = $('#view-child').tabs('getTabIndex', tab);
            if (index > 0) {
                window.frames[index].location.reload();
            }
            else {
                window.frames[0].location.reload()
            }
        }
        //退出系统
        $('#user-exit').click(function () {
            if (confirm("您要退出本系统吗?")) {
                window.location.href = window.location.origin + "/Login/LoginOff";
            }
        });
    </script>
}

